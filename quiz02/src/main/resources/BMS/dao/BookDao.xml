<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BMS.dao.BookDao">

  <resultMap type="BMS.domain.Book" id="bookMap">
    <id column="bno" property="no" />
  </resultMap>

  <select id="selectList" resultMap="bookMap" parameterType="map">
    select bno,title,authors,press,tag,rent 
    from book 
    order by
    <choose>
      <when test="keyword == 'title'">title </when>
      <when test="keyword == 'authors'">authors </when>
      <otherwise>bno</otherwise>
    </choose>
    <choose>
      <when test="align == 'desc'">desc</when>
      <otherwise>asc</otherwise>
    </choose>
    limit #{startIndex}, #{length}
  </select>
  
  <select id="detail" resultMap="bookMap">
  select
  bno,title,authors,press,tag,rent
  from book
  </select>
  
  <insert id="insert" parameterType="BMS.domain.Book">
    insert into book(title,authors,press,tag)
    values(#{title},#{authors},#{press},#{tag})
  </insert>
  
  <delete id="delete" parameterType="int">
    delete from book where bno=#{value}
  </delete>
  
  <update id="update" parameterType="BMS.domain.Book">
    update book set
    title=#{title},
    authors=#{authors},
    press=#{press},
    tag=#{tag}
    where bno=#{no}
  </update>
  
  <update id="rent" parameterType="BMS.domain.Book">
    update book set
    rent=#{rent}
    where bno=#{no}
  </update>


</mapper>