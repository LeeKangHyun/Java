<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">

  <!-- 서블릿 클래스에 대해 선언한다. -->
  <servlet>
    <!-- 서블릿 별명을 선언한다. 마음대로 작성하라.
         프로그래밍의 일관성을 위해 클래스 이름으로 작성한다. 공백 가능 -->
    <servlet-name>Servlet01</servlet-name>
    <servlet-class>servlet.Servlet01</servlet-class>
  </servlet>
  
  <!-- 서블릿 클래스에 URL을 부여한다. 마음대로...-->
  <servlet-mapping>
    <servlet-name>Servlet01</servlet-name>
    <!-- URL이름을 작성할 때 공백을 주어서는 안된다. 확장자 명은 마음대로..
         사용자가 웹 브라우저에서 요청할 때는 다음과 같이 요청 해야 한다.
         http://IPaddress(ex:localhost):포트번호/웹어플리케이션폴더/URL -->
    <url-pattern>/exam/servlet01</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>Servlet02</servlet-name>
    <servlet-class>servlet.Servlet02</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Servlet02</servlet-name>
    <url-pattern>/exam/servlet02</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Servlet03</servlet-name>
    <servlet-class>servlet.Servlet03</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Servlet03</servlet-name>
    <url-pattern>/exam/servlet03</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Servlet04</servlet-name>
    <servlet-class>servlet.Servlet04</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Servlet04</servlet-name>
    <url-pattern>/exam/servlet04</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Servlet05</servlet-name>
    <servlet-class>servlet.Servlet05</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Servlet05</servlet-name>
    <url-pattern>/exam/servlet05</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Servlet06</servlet-name>
    <servlet-class>servlet.Servlet06</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Servlet06</servlet-name>
    <url-pattern>/exam/servlet06</url-pattern>
  </servlet-mapping>
</web-app>









